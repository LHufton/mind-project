<%- include('../partials/header') %>

<h1>All habits</h1>
<table>
  <thread>
    <tr >
      <th >Event</th>
      <th>Time of day</th>
      <th>Location</th>
      <th>Duration</th>
      <th>Completed</th>
    </tr>
  </thread>
  <tbody>

    <% habits.forEach(function(h) { %>

      <tr>
        <td><%= h.what %></td>
        <td><%= h.when %></td>
        <td><%= h.where %></td>
        <td><%= h.howLong %></td>
        <td><%= h.finished %></td>
        <td><form 
          action="/habits/<%= h.id%>?_method=DELETE" 
          method= 'POST'
          class="delete-form"
          >
          <button classname="delete-habit-button" type="submit">Delete habit</button>
          
        </form>
      </td>
        <td><a href="/habits/<%= h._id %>">Details</a></td>
      </tr> 
    <% }) %>
  </tbody>
</table>
<%- include('../partials/footer') %>
